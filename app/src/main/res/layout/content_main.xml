<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activity.MainActivity"
    tools:showIn="@layout/activity_main">

    <Button
        android:id="@+id/default_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="默认的线性列表"/>

    <Button
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="带分割线的线性列表"/>

    <Button
        android:id="@+id/gird"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="带分割线的九宫格布局"/>

    <Button
        android:id="@+id/full_gide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="全展开的九宫格布局"/>

    <Button
        android:id="@+id/full_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="全展开的线性列表"/>


    <Button
        android:id="@+id/horizion_full_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="水平全展开列表"
      />

    <Button
        android:id="@+id/wrap_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="WrapLayoutItemDorc"
        android:visibility="gone"/>


</LinearLayout>
